{
  "manifest_version": 2,

  "name": "Impfmon",
  "description": "Monitor for vaccine appointments and open a tab when one is available. Icon: Flaticon.com",
  "version": "1.0",
  "icons": {
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "notifications",
    "https://api.impfstoff.link/"
  ]
}
